// The program takes an array of numbers and returns the third number in sorted array

import java.util.Arrays;
import java.util.Scanner;
public class Project {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter the number of nambers in array:");
        int n = scanner.nextInt();
        int[] array = new int[n];
        System.out.println("Enter the nambers in array:");
        for (int i = 0; i < n; i++) {
            int number = scanner.nextInt();
            array[i] = number;
        }
        Arrays.sort(array);
        int third = array[2];
        System.out.println("Third number in sorted array is: " + third);
    }
}
