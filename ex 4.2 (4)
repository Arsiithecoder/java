// This program will ask the user for the number of rows and columns they want to print and the character they want to use. It will then print the character in the number of rows and columns the user specified.

import java.util.Scanner;


public class Project {

    public static void main (String [] args){
        Scanner input = new Scanner(System.in);
        System.out.println("Enter the number of rows: ");
        int rows = input.nextInt();
        System.out.println("Enter the number of columns: ");
        int columns = input.nextInt();
        System.out.println("Enter the character you want to use: ");
        String character = input.next();
        for (int i = 0; i < rows; i++){
            for (int j = 0; j < columns; j++){
                System.out.print(character);
            }
            System.out.println();
        }
    }
}
