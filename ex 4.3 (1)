// Program to calculate the power of a number using Math.pow() method

import java.util.Scanner;

class Project {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter the main number: ");
        double mainNumber = scanner.nextDouble();
        System.out.println("Enter the power of a main number: ");
        double power = scanner.nextDouble();
        System.out.println("The result is: " + Math.pow(mainNumber, power));

        scanner.close();
    }
}
